<%- include("../partials/header") %> 

    <header class="jumbotron"> 
        <h1>A New Perspective.</h1>
        <p>Share and enjoy!</p>
        <p>
            <a class="btn btn-primary btn-lg" href="/campground/new">Chare!</a>
        </p>
        
    </header>

    <div class="row text-center" style="display:flex; flex-wrap: wrap;" >
            <% campground.forEach(function(c){ %>
                <div class="col-lg-3 col-lg-4 col-sm-6 mb-4">
                    <div class="card" >
                        <img src="<%= c.image %>" class="card-img-top" alt= "<%= c.name  %>" >
                        <div class="card-body">
                          <h5 class="card-title"><%= c.name %></h5>
                          <p class="card-text">
                            <% if (c.rating === 0) { %>
                                <em>No reviews yet.</em>
                            <% } else { %>
                                <span class="fa fa-star checked"></span>
                                <span class="fa fa-star <% if (c.rating > 1.5) { %> checked <% } %>"></span>
                                <span class="fa fa-star <% if (c.rating > 2.5) { %> checked <% } %>"></span>
                                <span class="fa fa-star <% if (c.rating > 3.5) { %> checked <% } %>"></span>
                                <span class="fa fa-star <% if (c.rating > 4.5) { %> checked <% } %>"></span>
                            <% } %>
                            </p>

                          <a href="/campground/<%= c._id %>" class="btn btn-primary">More info</a>
                        </div>
                    </div>
                </div>
            <% }); %> 
    </div>
    


<%- include("../partials/footer") %> 