<%- include("../partials/header") %> 

    <div class="row justify-content-center">
    
        <div class="col-md-12 text-center">
            <h1 >Create new post</h1>
        </div>
       
        <div class="col-xs-8 col-md-8 col-lg-8">
            <form action="/campground" method = "POST">
                <div class="form-group">
                    <input class="form-control" type="text" name = "name" placeholder="title">
                </div>
                <div class="form-group">
                    <input class="form-control" type="number" name = "price" placeholder="price" min= "0.01" step="0.01">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name = "image" placeholder="image URL">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name = "description" placeholder="content">
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary">Submit</button>
                </div>
            </form>
            <a href="/campground">Back to Homepage</a>
        </div>

    </div>



